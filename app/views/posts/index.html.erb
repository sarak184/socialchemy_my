<main class= "body-main">
	
    <div id="new-post">
    	<h3>Posts</h3>
	<%= form_for @post, remote: true do |f| %>
	    <%= f.label :content, "New Post" %>
	     <%= f.text_field :content %>
	     <%= f.submit %>
	      <%end%>
      </div>
      <div class="api"></div>
<div class="posts-list-container center-container">
	    <ul id="p">

		<% Post.all.reverse.each do |p| %>

		 <%= render "post" , post: p %>
		
		 <% end %>
		</ul>

		
	</div>
	</main>













